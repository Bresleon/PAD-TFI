@{
    ViewData["Title"] = "Inicio DNRPA";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Registros de la Propiedad Automotor</h1>
        <p class="text-muted fs-5">Dirección Nacional de los Registros Nacionales de la Propiedad del Automotor (DNRPA)</p>
        <hr class="w-25 mx-auto mt-4">
        <h4 class="mt-4">Seleccione una operación para continuar</h4>
    </div>

    <div class="row g-4 mt-3">

        <!-- Card: Generar Nueva Patente -->
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" asp-controller="Transaccion" asp-action="Generar">
                <div class="card shadow-sm border-0 h-100 hover-card">
                    <div class="card-body text-center">
                        <i class="bi bi-plus-circle fs-1 text-primary"></i>
                        <h5 class="mt-3">Generar Nueva Patente</h5>
                        <p class="text-muted small">
                            Cree una nueva patente para un vehículo registrado.
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Card: Transferir Patente -->
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" asp-controller="Transaccion" asp-action="Transferencia">
                <div class="card shadow-sm border-0 h-100 hover-card">
                    <div class="card-body text-center">
                        <i class="bi bi-arrow-left-right fs-1 text-success"></i>
                        <h5 class="mt-3">Transferir Patente</h5>
                        <p class="text-muted small">
                            Transfiera la titularidad de una patente entre personas.
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Card: Obtener por Rango -->
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" asp-controller="Transaccion" asp-action="Obtener">
                <div class="card shadow-sm border-0 h-100 hover-card">
                    <div class="card-body text-center">
                        <i class="bi bi-list-ol fs-1 text-info"></i>
                        <h5 class="mt-3">Obtener Patentes por Rango</h5>
                        <p class="text-muted small">
                            Consulte un conjunto de patentes entre valores específicos.
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Card: Obtener por DNI -->
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" asp-controller="Transaccion" asp-action="ObtenerPorDni">
                <div class="card shadow-sm border-0 h-100 hover-card">
                    <div class="card-body text-center">
                        <i class="bi bi-person-vcard fs-1 text-warning"></i>
                        <h5 class="mt-3">Obtener por DNI</h5>
                        <p class="text-muted small">
                            Consulte transacciones asociadas a un titular por DNI.
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Card: Buscar Titular -->
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" asp-controller="Titular" asp-action="ObtenerTitular">
                <div class="card shadow-sm border-0 h-100 hover-card">
                    <div class="card-body text-center">
                        <i class="bi bi-person-check fs-1 text-danger"></i>
                        <h5 class="mt-3">Obtener Titular por CUIL</h5>
                        <p class="text-muted small">
                            Busque información personal y registral del titular.
                        </p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Card: Buscar Vehiculo -->
        <div class="col-12 col-md-6 col-lg-4">
            <a class="text-decoration-none" asp-controller="Vehiculo" asp-action="ObtenerVehiculo">
                <div class="card shadow-sm border-0 h-100 hover-card">
                    <div class="card-body text-center">
                        <i class="bi bi-car-front fs-1 text-secondary"></i>
                        <h5 class="mt-3">Obtener Vehículo por Patente</h5>
                        <p class="text-muted small">
                            Consulte los datos del vehículo asociado a una patente.
                        </p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>

<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 15px;
    }

    .hover-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.15);
    }
</style>
