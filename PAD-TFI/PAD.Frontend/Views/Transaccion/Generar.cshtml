@model PAD.Frontend.Dtos.TransaccionAltaRequestDto

<h2>Generar Nueva Patente</h2>

<form asp-action="Generar" method="post" class="mt-4">

    <div class="row">
        <div class="col-md-6 mb-3">
            <label>Titular</label>
            <input asp-for="Titular" class="form-control" required />
        </div>

        <div class="col-md-3 mb-3">
            <label>Marca</label>
            <input asp-for="Marca" class="form-control" required />
        </div>

        <div class="col-md-3 mb-3">
            <label>Modelo</label>
            <input asp-for="Modelo" class="form-control" required />
        </div>

        <div class="col-md-4 mb-3">
            <label>Categoría</label>
            <input asp-for="Categoria" class="form-control" required />
        </div>

        <div class="col-md-4 mb-3">
            <label>Precio</label>
            <input asp-for="Precio" class="form-control" type="number" step="0.01" required />
        </div>

        <div class="col-md-4 mb-3">
            <label>Fecha Fabricación</label>
            <input asp-for="FechaFabricacion" type="date" class="form-control" required />
        </div>

        <div class="col-md-6 mb-3">
            <label>Número de Chasis</label>
            <input asp-for="NumeroChasis" class="form-control" required />
        </div>

        <div class="col-md-6 mb-3">
            <label>Número de Motor</label>
            <input asp-for="NumeroMotor" class="form-control" required />
        </div>
    </div>

    <button class="btn btn-primary mt-3">Generar</button>
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}
