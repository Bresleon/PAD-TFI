@model List<PAD.Frontend.Models.VehiculoDto>

<h2>Obtener Vehículos por CUIL</h2>

<form asp-action="ObtenerPorCuil" method="get">
    <div class="form-group">
        <label>CUIL del Titular</label>
        <input type="text" name="cuil" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Buscar Vehículos</button>
</form>

<hr />

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

@if (Model != null && Model.Any())
{
    <h3>Vehículos Encontrados: @Model.Count</h3>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Categoría</th>
                <th>Precio</th>
                <th>Fecha Fabricación</th>
                <th>Número Chasis</th>
                <th>Número Motor</th>
                <th>Número Patente</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehiculo in Model)
            {
                <tr>
                    <td>@vehiculo.Marca</td>
                    <td>@vehiculo.Modelo</td>
                    <td>@vehiculo.Categoria</td>
                    <td>$@vehiculo.Precio.ToString("N2")</td>
                    <td>@vehiculo.FechaFabricacion.ToString("yyyy-MM-dd")</td>
                    <td>@vehiculo.NumeroChasis</td>
                    <td>@vehiculo.NumeroMotor</td>
                    <td>@vehiculo.NumeroPatente</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model != null && !Model.Any() && ViewBag.Error == null)
{
    <div class="alert alert-warning">
        No se encontraron vehículos para el CUIL especificado.
    </div>
}